{
    # Config
    :local speedportAddress "192.168.1.1"

    # Load JSON Parser
    /system script run "JParseFunctions"; global JSONLoad; global JSONLoads; global JSONUnload

    # Request Speedport stats
    :local result ([/tool fetch http-method=get mode=http http-header-field="Accept-Language: el-GR" url="http://$speedportAddress/data/Status.json" as-value output=user])

    :if ($result->"status" = "finished") do={
        :global JSONIn ($result->"data")
        :global fJParse
        :global JParseOut [$fJParse]
        :local results ($JParseOut)

        :if ([:len $results]>0) do={
            :global speedportStats ({})
            
            :foreach k,v in=$results do={
                :foreach sn,sv in=$v do={
                    :set ($speedportStats->$sv) ($v->"varvalue")
                }
            }
        }
    }
}